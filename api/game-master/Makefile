.PHONY: run down build up clean reset restart logs ps dev cat

# Run the application by building and starting the containers
run: down build up cat
	@echo "âœ¨ Running the full workflow: down -> build -> up"

# Stop and remove containers, networks, and volumes
down:
	@echo "â¬ Stopping and removing containers..."
	docker compose down || $(MAKE) hiz
	@echo "âœ… Containers stopped and removed."

# Build or rebuild services
build:
	@echo "ðŸ”§ Building services..."
	docker compose build --parallel || $(MAKE) hiz
	@echo "âœ… Build completed."

# Start containers in detached mode
up:
	@echo "ðŸš€ Starting containers in detached mode..."
	docker compose up -d || $(MAKE) hiz
	@echo "âœ… Containers are up and running."

# Reset by stopping and removing containers, networks, and volumes
reset:
	@echo "â™»ï¸ Resetting: removing containers and volumes..."
	docker compose down -v || $(MAKE) hiz
	@echo "âœ… Reset done! Everything is clean and ready to restart."

# Restart the containers
restart:
	@echo "ðŸ”„ Restarting containers..."
	docker compose restart || $(MAKE) hiz
	@echo "âœ… Containers restarted."

# Show logs for the containers
logs:
	@echo "ðŸ“œ Fetching logs..."
	docker compose logs -f || $(MAKE) hiz

# Show running containers
ps:
	@echo "ðŸ” Listing running containers..."
	docker compose ps || $(MAKE) hiz
	@echo "âœ… Listed all running containers."

# Run Docker Compose with the dev-compose.yaml file and print a cat
dev:
	clear
	@echo "ðŸš§ Running with dev-compose.yaml..."
	@echo "=============================================================="
	docker compose -f dev-compose.yaml down -v || $(MAKE) hiz
	@echo "=============================================================="
	docker compose -f dev-compose.yaml up -d --build || $(MAKE) hiz
	@echo "=============================================================="
	@echo "âœ¨ Launched the application with dev-compose.yaml!"
	@echo " /\_/\  "
	@echo "( o.o ) "
	@echo " > ^ <  "

# Fun cat command
cat:
	@echo " /\_/\  "
	@echo "( o.o ) "
	@echo " > ^ <  "

hiz:
	@echo "ðŸš¨ Something went wrong! ðŸš¨"
	@echo "ðŸ’€ðŸ’€ðŸ’€ðŸ’€ Please check the logs for more information. ðŸ’€ðŸ’€ðŸ’€ðŸ’€ fucking dumbass ðŸ’€ðŸ’€ðŸ’€ðŸ’€ðŸ’€"
